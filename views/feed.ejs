<%- include('partials/header') -%>

<section class="flex flex-wrap justify-around gap-y-6 lg:gap-y-32 pb-28">
  <% for(var i=0; i<posts.length; i++) {%>
  <div class="rounded-lg shadow-lg bg-white">
               
            <a href="/post/<%= posts[i]._id%>">
              <img class="rounded-t-lg" src="<%= posts[i].image%>">
            </a>
            <div class="p-6">
              <form class="inline mb-4 lg:mb-6" action="/post/likePost/<%= posts[i]._id %>?_method=PUT" method="POST">
                <button class="fa-regular fa-heart text-pink-600 hover:text-orange-500 text-xl lg:text-2xl" type="submit"></button>
              </form>
              <a href="/post/<%= posts[i]._id%>" class="text-xl lg:text-2xl px-2 lg:px-3"><i class="fa-regular fa-comments"></i></a>
              <span class="text-gray-900 block lg:mt-3 font-medium lg:text-xl">
                <%= posts[i].likes%> 
                <% if (posts[i].likes == 1) { %>
                  <span>like</span>
                  <% } else { %>
                    <span>likes</span>
                <% } %>
              </span>
              <h5 class="text-gray-900 lg:text-xl font-medium mb-2 mt-6"><%= user.userName%></h5>
              <p class="text-gray-700 text-base lg:text-xl mb-4">
                <%= posts[i].caption %>
              </p>
            </div>        
    </div>
    <% } %>
  </section>

  <%- include('partials/footer') -%>